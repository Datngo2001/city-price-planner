    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "dockerfile",
            "request": "launch",
            "name": "Docker: Build Production",
            "dockerfile": "api/Dockerfile",
            "contextPath": "${workspaceFolder}/api"
        },
        {
            "name": "Docker: Debug Go API",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/app",
            "port": 2345,
            "host": "127.0.0.1",
            "showLog": true,
            "substitutePath": [
                {
                    "from": "${workspaceFolder}\\api",
                    "to": "/app"
                }
            ]
        }
    ]
}