# Development Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
# Local MongoDB (requires MongoDB to be installed and running)
MONGODB_URI=mongodb://localhost:27017/city-price-planner-dev
MONGODB_TEST_URI=mongodb://localhost:27017/city-price-planner-test

# JWT Configuration (development-friendly settings)
JWT_SECRET=dev-jwt-secret-key-2024-city-price-planner-not-for-production
JWT_EXPIRES_IN=7d

# Cookie Settings
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Rate Limiting (relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS Configuration (allow common dev ports)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173,http://localhost:8080

# Logging (verbose for development)
LOG_LEVEL=debug

# Development flags
DEBUG=true
ENABLE_SEED_DATA=true
DISABLE_AUTH=false

# Development MongoDB Atlas alternative (if you prefer cloud during dev)
# MONGODB_URI=mongodb+srv://dev-user:dev-password@dev-cluster.mongodb.net/city-price-planner-dev?retryWrites=true&w=majority
